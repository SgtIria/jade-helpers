mixin fieldBlock(title, helpAnchor)
	div.cardContainer
		h3.cardHeader
			span #{title}
			a(href="help##{helpAnchor}", target="_blank")
				img.helpIcon(src="/images/help.png", style="float: right;")
		div.cardOuter(style="display: inline-block")
			block

mixin textBox(o)
	input(type="text", name=o.name, value=o.value, attributes)